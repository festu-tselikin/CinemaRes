@model Cinema.Models.Ticket

@{
    ViewBag.Title = "Отмена";
}

<h2>Отмена бронирования</h2>

<h3>Вы уверены, что желаете отменить бронирование?</h3>
<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название фильма
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Session.Film.FilmName)
        </dd>

        <dt>
            Дата сеанса
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Session.DateSession)
        </dd>

        <dt>
            Время сеанса
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Session.TimeSession)
        </dd>

        <dt>
            Тип сидения
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sector.SectorName)
        </dd>

        <dt>
            Ряд
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NColumn)
        </dd>

        <dt>
            Место
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NSpot)
        </dd>

        <dt>
            Цена
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Отменить" class="btn btn-default" />
        </div>
    }
</div>
